          "name": "1.1 Register Teacher",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has user object', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.user).to.be.an('object');",
                  "    pm.expect(jsonData.user.id).to.be.a('string');",
                  "    pm.expect(jsonData.user.email).to.equal(pm.variables.get('test_email'));",
                  "});",
                  "",
                  "// Save teacher_id for later use",
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('teacher_id', jsonData.user.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }

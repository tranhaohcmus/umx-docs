            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"TestPass123!\",\n  \"first_name\": \"Trần\",\n  \"last_name\": \"Hảo\",\n  \"phone\": \"0901234567\",\n  \"school\": \"Trường ABC\"\n}"
            },
            "url": {
